<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Profile">

    <RelativeLayout android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >



        <RelativeLayout android:id="@+id/page_self_page_no_need_now__ek1"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/profile_pic"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_marginStart="95dp"
                android:layout_marginTop="59dp"
                android:contentDescription="profile_pic"
                android:gravity="center" />

            <TextView
                android:id="@+id/profile_username"
                android:layout_width="174dp"
                android:layout_height="38dp"
                android:layout_gravity="center"
                android:layout_marginLeft="98dp"
                android:layout_marginTop="246dp"
                android:text="Name:"
                android:textColor="@color/polyu_color"
                android:textSize="20sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/line_1"
                android:layout_width="360.01dp"
                android:layout_height="20dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="319dp"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <Button
                android:id="@+id/button_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/input_blanket"
                android:text="Log out"
                android:textColor="@color/polyu_color"/>


        </RelativeLayout>

    </RelativeLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_navigation"
        android:background="@color/white"
        app:itemBackground="@color/white"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        app:menu="@menu/menu_navigation"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>