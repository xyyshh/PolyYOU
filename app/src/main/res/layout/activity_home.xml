<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Home">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="false"
        android:layout_centerVertical="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Home"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black" />

        <RelativeLayout
            android:id="@+id/page_post_page_ek1"

            android:layout_alignParentTop="true"
            android:layout_marginStart="65dp"
            android:layout_width="327dp"
            android:layout_height="48dp"
            android:layout_centerInParent="false"
            android:layout_centerVertical="false"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="65dp">



            <Button
                android:id="@+id/sh_button"
                android:layout_width="88dp"
                android:layout_height="48dp"
                android:background="@drawable/filter_button"
                android:stateListAnimator="@null"
                android:text="Secondhand"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="14dp"
                tools:ignore="HardcodedText,SpUsage" />

            <Button
                android:id="@+id/help_button"
                android:layout_width="88dp"
                android:layout_height="48dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/filter_button"
                android:stateListAnimator="@null"
                android:text="Help"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="14dp"
                tools:ignore="HardcodedText,SpUsage" />

            <Button
                android:id="@+id/ta_button"
                android:layout_width="88dp"
                android:layout_height="48dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:background="@drawable/filter_button"
                android:stateListAnimator="@null"
                android:text="Takeaway"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,SpUsage" />
        </RelativeLayout>

            <RelativeLayout
                android:id="@+id/post_area"
                android:layout_marginTop="100dp"
                android:layout_width="360dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true">

                <RelativeLayout
                    android:id="@+id/post_area_ek1"
                    android:background="@drawable/post_area_ek1_shape"
                    android:layout_centerHorizontal="true"
                    android:layout_width="350dp"
                    android:layout_height="115dp"
                    tools:ignore="UselessParent">

                    <TextView
                        android:id="@+id/title"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="23dp"
                        android:singleLine="true"
                        android:text="@string/post_title_string"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/black" />

                    <ImageView
                        android:id="@+id/user_profile_photo"
                        android:src="@drawable/user_profile_photo"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="40dp"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:contentDescription="TODO" />

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_gravity="center_horizontal|center"
                        android:gravity="start"
                        android:textColor="@color/black"
                        android:layout_marginStart="35dp"
                        android:layout_marginTop="40dp"
                        android:layout_width="195dp"
                        android:singleLine="true"
                        android:layout_height="18dp"
                        android:text="@string/user_name_string"
                        android:textStyle="normal"
                        android:textSize="12sp"
                        />
                    <TextView
                        android:id="@+id/time"
                        android:layout_gravity="center_horizontal|center"
                        android:gravity="start"
                        android:layout_marginTop="40dp"
                        android:layout_marginStart="240dp"
                        android:textColor="@color/time_color"
                        android:layout_width="110dp"
                        android:layout_height="15dp"
                        android:text="@string/time_string"
                        android:textStyle="normal"
                        android:textSize="12sp"
                        tools:ignore="RtlHardcoded" />

                    <TextView android:id="@+id/post_content"
                        android:textColor="@color/black"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="65dp"
                        android:layout_marginEnd="20dp"
                        android:singleLine="true"
                        android:layout_width="300dp"
                        android:layout_height="20dp"
                        android:text="@string/post_content_string"
                        android:textStyle="normal"
                        android:textSize="15sp"
                        />

                    <ImageView android:id="@+id/comment_icon"
                        android:src="@drawable/comment_icon"
                        android:contentDescription="comment_icon"
                        android:layout_marginStart="315dp"
                        android:layout_marginTop="90dp"
                        android:layout_width="15dp"
                        android:layout_height="15dp" />
                    <TextView
                        android:id="@+id/comment_number"
                        android:textColor="@color/polyu_color"
                        android:layout_toEndOf="@id/comment_icon"
                        android:layout_marginTop="90dp"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:text="@string/comment_number_string"
                        android:textStyle="normal"
                        android:textSize="14sp"
                        />

                </RelativeLayout>

            </RelativeLayout>


<!--        </RelativeLayout>-->



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/white"
        android:background="@color/white"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:menu="@menu/menu_navigation" />

</RelativeLayout>