<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Home">


        <RelativeLayout
            android:id="@+id/page_post_page_ek1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true">
            <RelativeLayout
                android:id="@+id/searching"
                android:layout_width="360dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                >
                <View
                    android:id="@+id/search_input"
                    android:background="@drawable/psw_input_shape"
                    android:layout_height="35dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_width="350dp"
                    />

                <Button
                    android:id="@+id/button_search"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignEnd="@id/search_input"
                    android:layout_centerVertical="true"
                    android:background="@drawable/search_icon"
                    tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
                <TextView
                    android:id="@+id/type_something"
                    android:fontFamily="Roboto"
                    android:alpha="0.5"
                    android:textSize="15sp"
                    android:textColor="@color/type_something____________color"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="9dp"
                    android:layout_width="174.5dp"
                    android:layout_height="28.5dp"
                    android:text="@string/type_something____________string"
                    />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/post_area"
                android:layout_marginTop="100dp"
                android:layout_width="360dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true">

                <RelativeLayout
                    android:id="@+id/post_area_ek1"
                    android:background="@drawable/post_area_ek1_shape"
                    android:layout_centerHorizontal="true"
                    android:layout_width="350dp"
                    android:layout_height="115dp"
                    tools:ignore="UselessParent">

                    <TextView
                        android:id="@+id/title"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="23dp"
                        android:singleLine="true"
                        android:text="@string/post_title_string"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/black" />

                    <ImageView
                        android:id="@+id/user_profile_photo"
                        android:src="@drawable/user_profile_photo"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="40dp"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:contentDescription="TODO" />

                    <TextView
                        android:id="@+id/user_name"
                        android:fontFamily="Poppins"
                        android:layout_gravity="center_horizontal|center"
                        android:gravity="start"
                        android:textColor="@color/black"
                        android:layout_marginStart="35dp"
                        android:layout_marginTop="40dp"
                        android:layout_width="195dp"
                        android:singleLine="true"
                        android:layout_height="18dp"
                        android:text="@string/user_name_string"
                        android:textStyle="normal"
                        android:textSize="12sp"
                        />
                    <TextView
                        android:id="@+id/time"
                        android:fontFamily="Poppins"
                        android:layout_gravity="center_horizontal|center"
                        android:gravity="start"
                        android:layout_marginTop="40dp"
                        android:layout_marginStart="240dp"
                        android:textColor="@color/time_color"
                        android:layout_width="110dp"
                        android:layout_height="15dp"
                        android:text="@string/time_string"
                        android:textStyle="normal"
                        android:textSize="12sp"
                        tools:ignore="RtlHardcoded" />

                    <TextView android:id="@+id/post_content"
                        android:fontFamily="Roboto"
                        android:textColor="@color/black"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="65dp"
                        android:layout_marginEnd="20dp"
                        android:singleLine="true"
                        android:layout_width="300dp"
                        android:layout_height="20dp"
                        android:text="@string/post_content_string"
                        android:textStyle="normal"
                        android:textSize="15sp"
                        />

                    <ImageView android:id="@+id/comment_icon"
                        android:src="@drawable/comment_icon"
                        android:contentDescription="comment_icon"
                        android:layout_marginStart="315dp"
                        android:layout_marginTop="90dp"
                        android:layout_width="15dp"
                        android:layout_height="15dp" />
                    <TextView
                        android:id="@+id/comment_number"
                        android:fontFamily="Roboto"
                        android:textColor="@color/polyu_color"
                        android:layout_toEndOf="@id/comment_icon"
                        android:layout_marginTop="90dp"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:text="@string/comment_number_string"
                        android:textStyle="normal"
                        android:textSize="14sp"
                        />

                </RelativeLayout>

            </RelativeLayout>


<!--        </RelativeLayout>-->
    </RelativeLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/white"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:menu="@menu/menu_navigation" />



</RelativeLayout>
<!--</androidx.constraintlayout.widget.ConstraintLayout>-->